<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>角色管理</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- 新 Bootstrap 核心 CSS 文件 -->
    <link rel="stylesheet" href="${request.contextPath}/static/css/bootstrap.min.css">
    
    <!-- 可选的Bootstrap主题文件（一般不用引入） -->
    <link rel="stylesheet" href="${request.contextPath}/static/css/bootstrap-theme.css">
    
    <!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
    <script src="${request.contextPath}/static/js/jquery.min.js"></script>
    
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="${request.contextPath}/static/js/bootstrap.min.js"></script>
	<!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="${request.contextPath}/static/css/bootstrap-select.min.css">
    
    <!-- Latest compiled and minified JavaScript -->
    <script src="${request.contextPath}/static/js/bootstrap-select.min.js"></script>

	<style >
		/*
         * Base structure
         */
        
        /* Move down content because we have a fixed navbar that is 50px tall */
        body {
          padding-top: 50px;
        }
        
        
        /*
         * Global add-ons
         */
        
        .sub-header {
          padding-bottom: 10px;
          border-bottom: 1px solid #eee;
        }
        
        /*
         * Top navigation
         * Hide default border to remove 1px line.
         */
        .navbar-fixed-top {
          border: 0;
        }
        
        /*
         * Sidebar
         */
        
        /* Hide for mobile, show later */
        .sidebar {
          display: none;
        }
        @media (min-width: 768px) {
          .sidebar {
            position: fixed;
            top: 51px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: block;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
            background-color: #f5f5f5;
            border-right: 1px solid #eee;
          }
        }
        
        /* Sidebar navigation */
        .nav-sidebar {
          margin-right: -21px; /* 20px padding + 1px border */
          margin-bottom: 20px;
          margin-left: -20px;
        }
        .nav-sidebar > li > a {
          padding-right: 20px;
          padding-left: 20px;
        }
        .nav-sidebar > .active > a,
        .nav-sidebar > .active > a:hover,
        .nav-sidebar > .active > a:focus {
          color: #fff;
          background-color: #428bca;
        }
        
        
        /*
         * Main content
         */
        
        .main {
          padding: 20px;
        }
        @media (min-width: 768px) {
          .main {
            padding-right: 40px;
            padding-left: 40px;
          }
        }
        .main .page-header {
          margin-top: 0;
        }
        
        
        /*
         * Placeholder dashboard ideas
         */
        
        .placeholders {
          margin-bottom: 30px;
          text-align: center;
        }
        .placeholders h4 {
          margin-bottom: 0;
        }
        .placeholder {
          margin-bottom: 20px;
        }
        .placeholder img {
          display: inline-block;
          border-radius: 50%;
        }

    </style>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="http://v3.bootcss.com/examples/dashboard/#">RuiBoTai--UserAdmin</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">服务器状态</a></li>
            <li><a href="${request.contextPath}/sys/Prefence">设置</a></li>
            <li><a href="#">参数简介</a></li>
            <li><a href="#">帮助</a></li>
          </ul>
          <form class="navbar-form navbar-right">
            <input type="text" class="form-control" placeholder="查找...">
          </form>
        </div>
      </div>
    </nav>
	<div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li>
                <a href="${request.contextPath}/user">用户管理</a>
			</li>
            <li class="active">
				<a href="${request.contextPath}/role/list">角色管理</a>
			</li>
            <li>
				<a href="${request.contextPath}/user/create">资源管理</a>
			</li>
            <li>
				<a href="${request.contextPath}/user/create">其他信息</a>
			</li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header">服务器状态</h1>

          <div class="row placeholders">
            <div class="col-xs-6 col-sm-3 placeholder">
              <img data-src="holder.js/200x200/auto/sky" class="img-responsive" alt="200x200" src="$!url" data-holder-rendered="true">
              <h4>JVM状态</h4>
              <span class="text-muted">描述信息</span>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
              <img data-src="holder.js/200x200/auto/vine" class="img-responsive" alt="200x200" src="$!url" data-holder-rendered="true">
              <h4>DB状态</h4>
              <span class="text-muted">描述信息</span>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
              <img data-src="holder.js/200x200/auto/sky" class="img-responsive" alt="200x200" src="$!url" data-holder-rendered="true">
              <h4>Network状态</h4>
              <span class="text-muted">描述信息</span>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
              <img data-src="holder.js/200x200/auto/vine" class="img-responsive" alt="200x200" src="$!url" data-holder-rendered="true">
              <h4>连接用户数</h4>
              <span class="text-muted">描述信息</span>
            </div>
          </div>

		  <h2 class="sub-header">角色列表</h2>
		  
		  	<!-- Button trigger modal -->
            <button type="button" id="addRole" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
				增加角色
            </button>
            <button type="button" class="btn btn-success">Other</button>
  
            
            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">创建角色</h4>
                  </div>
                  <div class="modal-body">
					<form role="form" id="role" method="post" action="/role/create">
                      <div class="form-group">
                        <label for="rolename">角色名称</label>
                        <input type="text" name="role" class="form-control" id="rolename" placeholder="Role Name">
                      </div>
                      <div class="form-group">
                        <label for="Description">角色描述</label>
                        <input type="text" name="description"  class="form-control" id="description" placeholder="Role Description">
                      </div>
					  
					  <div class="form-group">
                        <label for="resources">权限列表</label>
                        <select id="resourceIds" name="resourceIds" class="selectpicker show-tick form-control" multiple data-live-search="false">
                                #foreach($Rescource in $Rescourcelist)
									<option value="$Rescource.id">$Rescource.name</option>
								#end
                        </select>
                      </div>
                      
                      <div class="form-group">
                        <label for="Availables">是否启用</label>
                        <select id="available" name="available" class="selectpicker show-tick form-control" data-live-search="false">
								<option value=true>是</option>
								<option value=false>否</option>
                        </select>
                      </div>
                    
                    </form>

				  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" id="createButton" class="btn btn-primary">创建</button>
                  </div>
                </div>
              </div>
            </div>
		  
          <div class="table-responsive">
			<table class="table table-striped">
                <thead>
                    <tr>
						<th>#</th>
                        <th>角色名称</th>
                        <th>角色描述</th>
                        <th>权限列表</th>
                        <th>是否启用</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
            		#foreach($role in $!AllRoleList)
            			<tr >
							<th>${role.id}</th>
                            <td>${role.role}</td>
            				<td>${role.description}</td>
            				<td>${role.resourcename}</td>
            				<td>
     							#if (${role.available}==true)
     								是
     							#else
     								否
     							#end
            				</td>
                            <td>
            					<a class="btn btn-default btn-xs" onclick="javascript:updaterole('${role.id}','${role.role}','${role.description}',${role.resourceIds},'${role.available}')" data-toggle="modal" data-target="#UpdateModal"><span class="glyphicon glyphicon-cog"></span></a>     					
            				    <a class="btn btn-default btn-xs" onclick="javascript:deleterole(${role.id},'${role.role}')" data-toggle="modal" data-target="#deleteroleModal"><span class="glyphicon glyphicon-trash"></span></a>
            				</td>
                        </tr>
            		#end
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Modal update-->
            <div class="modal fade" id="UpdateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">角色信息更新</h4>
                  </div>
                  <div class="modal-body">
					<form role="form" id="updaterole" method="post" action="/role/update">
					  <input type="text" name="id" id="updateroleid" hidden="hidden">
                      <div class="form-group">
                        <label for="rolename">角色名称</label>
                        <input type="text" name="role" class="form-control" id="updaterolename" placeholder="Role Name">
                      </div>
                      <div class="form-group">
                        <label for="Description">角色描述</label>
                        <input type="text" name="description"  class="form-control" id="updatedescription" placeholder="Role Description">
                      </div>
					  <div class="form-group">
                        <label for="updateresourceIds">权限列表</label>
                        <select id="updateresourceIds" name="resourceIds" class="selectpicker show-tick form-control" multiple data-live-search="false">
                                #foreach($Rescource in $Rescourcelist)
									<option value="$Rescource.id">$Rescource.name</option>
								#end
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="updateavailable">是否启用</label>
                        <select id="updateavailable" name="available" class="selectpicker show-tick form-control" data-live-search="false">
								<option value=true>是</option>
								<option value=false>否</option>
                        </select>
                      </div>
                    </form>
				  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" id="updateButton" class="btn btn-primary">更新</button>
                  </div>
                </div>
              </div>
          	</div>   
    <!--End Modal-->
	<!--delete Modal -->
			<div class="modal fade" id="deleteroleModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">删除用户</h4>
                  </div>
                  <div class="modal-body">
					<span id="deleteInfo">
                    </span>
				  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <a type="button" id="deleteButton" class="btn btn-primary">确定</a>
                  </div>
                </div>
              </div>
            </div>
    <script>
		$(function(){
			$("#createButton").click(function(){
				$("#role").submit();
			});
		});
		$(function(){
			$("#updateButton").click(function(){
				$("#updaterole").submit();
			});
		});
		function deleterole(id,name){
			$("#deleteInfo").html("确定删除："+name+"?");
			$("#deleteButton").attr("href","${request.contextPath}/role/"+id+"/delete");
		}
		function updaterole(id,name,description,resourceIds,available){
			$("#updaterolename").attr("value",name);
			$("#updateroleid").attr("value",id);
			$("#updatedescription").attr("value",description);
			$('#updateresourceIds').selectpicker('val', resourceIds);
			$('#updateavailable').selectpicker('val', available);
		}
	</script>
</body>
</html>